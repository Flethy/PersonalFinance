<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/operations_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="6 June 2018"
                android:layout_margin="5dp"
                android:textColor="@color/expenseColor"
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/date_txt_income"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                android:text="Категория"
                android:textColor="@color/expenseColor"
                android:fontFamily="@font/comfortaa_bold"
                android:maxLines="1"
                android:id="@+id/type_txt_income"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Заметки"
                android:textColor="@color/expenseColor"
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/note_txt_income"
                android:layout_below="@+id/type_txt_income"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="6000"
                android:textColor="@color/expenseColor"
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/amount_txt_income"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>